{
  "manifest_version": 2,
  "name": "Sites Matrix Viewer",
  "short_name": "Sites Matrix",
  "version": "1.0",
  "description": "__MSG_appDesc__",

  "default_locale": "en",
  "author": "Shingo Toyoshima",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
